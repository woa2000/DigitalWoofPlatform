{
  "name": "digitalwoof-platform-tests",
  "version": "1.0.0",
  "description": "Test suite for Digital Woof Platform - Biblioteca de Campanhas",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run tests/integration",
    "test:accessibility": "vitest run tests/integration/accessibility.test.ts",
    "test:performance": "vitest run tests/integration/performance-load.test.ts",
    "test:browser": "playwright test",
    "test:e2e": "npm run test:browser && npm run test:integration",
    "test:watch": "vitest watch",
    "install-browsers": "playwright install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.0",
    "@axe-core/puppeteer": "^4.8.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "puppeteer": "^21.6.0",
    "better-sqlite3": "^9.2.0",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}